{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": [
      "es6"
    ],
    "paths": {
      "*": [
        "*",
        "*.ios",
        "*.android"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "webpack.config.js"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "types": [
    "react",
    "react-native"
  ],
  "extends": "expo/tsconfig.base"
}
